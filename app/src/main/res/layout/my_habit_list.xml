<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ListView
        android:id="@+id/list_of_my_habits"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textSize="24sp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:divider="@android:color/transparent"
        android:dividerHeight="5dp"
        app:layout_constraintBottom_toTopOf="@id/linearLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="16dp"
        android:text="All Habits"
        android:textSize="38sp"
        app:layout_constraintBottom_toTopOf="@+id/list_of_my_habits"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="63dp"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal"
        android:weightSum="120"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/list_of_my_habits"
        tools:layout_editor_absoluteX="1dp">

        <Button
            android:id="@+id/today_habits_button"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical|left"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="20"
            android:autoSizeTextType="uniform"
            android:background="@drawable/button_bg"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:scaleType="fitCenter"
            android:text="Today"
            android:textAllCaps="false"
            android:tooltipText="View Today" />

        <ImageButton
            android:id="@+id/today_button_add_habit"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_weight="50"
            android:background="@null"
            android:scaleType="fitCenter"
            app:tint="?colorAddHabit"
            android:tooltipText="Add New Habit"
            app:srcCompat="@drawable/button_add" />

        <ImageButton
            android:id="@+id/today_button_profile"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical|right"
            android:layout_weight="50"
            android:background="@null"
            android:scaleType="fitCenter"
            android:tooltipText="My Profile"
            app:srcCompat="@drawable/button_profile"
            app:tint="?android:colorPrimary" />

    </LinearLayout>

    <ImageButton
        android:id="@+id/AllHabitsBackButton"
        android:layout_width="52dp"
        android:layout_height="72dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="?android:colorPrimary"
        android:scaleType="fitCenter"

        android:background="@null"

        app:srcCompat="@drawable/button_back" />

</androidx.constraintlayout.widget.ConstraintLayout>