<?xml version="1.0" encoding="utf-8"?><!--habit_add_edit.xml
This is the xml file for adding/viewing/editing fragment
ALL ID FROM THIS FILE WILL CONTAIN "HAE" AT THE END
-->


<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--Back Button
    ID: backButtonHAE
    USE: Exiting the activity
    -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.75"
        android:contentDescription="@null"
        android:scaleType="centerCrop"
        android:src="@drawable/profile_background"></ImageView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewAM"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:fontFamily="@font/lato_black"
            android:gravity="center_horizontal"
            android:padding="15dp"
            android:text="Admin Menu"
            android:textColor="@color/NavajoWhite"
            android:textSize="30sp"
            android:textStyle="bold" />


        <Button
            android:id="@+id/IncrementDayAM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:fontFamily="@font/lato_black"
            android:backgroundTint="@color/IndianRed"
            android:textColor="@color/NavajoWhite"
            android:text="Next Day" />

        <Button
            android:id="@+id/resetAccountAM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:backgroundTint="@color/IndianRed"
            android:fontFamily="@font/lato_black"
            android:text="Reset Account"
            android:textColor="@color/NavajoWhite" />
    </LinearLayout>
    <Button
        android:id="@+id/confirmButtonAM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:backgroundTint="@color/IndianRed"
        android:fontFamily="@font/lato_black"
        android:text="DONE (Restart)"
        android:textColor="@color/NavajoWhite"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="100dp"
        />
    <TextView
        android:id="@+id/adminMenuDateText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="1dp"
        android:textColor="@color/NavajoWhite"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>