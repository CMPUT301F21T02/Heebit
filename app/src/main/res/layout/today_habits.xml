<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/welcome_user_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Today's Habits"
        android:textSize="38sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <ListView
        android:id="@+id/overview_habit_listview"
        android:layout_width="313dp"
        android:layout_height="435dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal"
        android:weightSum="120"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="1dp">>

        <Button
            android:id="@+id/all_habits_button"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical|left"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="20"
            android:tooltipText="View All Habits"
            android:autoSizeTextType="uniform"
            android:background="@drawable/button_bg"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:scaleType="fitCenter"
            android:text="All Habits"
            android:textAllCaps="false" />

        <ImageButton
            android:id="@+id/add_habit_imagebutton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_weight="50"
            android:tooltipText="Add New Habit"
            app:tint="?colorAddHabit"
            android:background="@null"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/button_add" />

        <ImageButton
            android:id="@+id/profile_imagebutton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical|right"
            android:layout_weight="50"
            app:tint="?android:colorPrimary"
            android:tooltipText="My Profile"
            android:background="@null"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/button_profile" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>