<?xml version="1.0" encoding="utf-8"?><!--habit_add_edit.xml
This is the xml file for adding/viewing/editing fragment
ALL ID FROM THIS FILE WILL CONTAIN "HAE" AT THE END
-->


<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--Back Button
    ID: backButtonHAE
    USE: Exiting the activity
    -->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/LL_TitleContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/backButtonHAE"
                android:layout_width="52dp"
                android:layout_height="72dp"
                android:background="@null"
                android:scaleType="fitCenter"
                android:src="@drawable/button_back"
                app:tint="?android:colorPrimary" />

            <LinearLayout
                android:id="@+id/LL_Name_Reason"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textViewHAE_hd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="15dp"
                    android:text="Habit Details - Name"
                    android:textSize="30dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/HabitReasonHAE_hd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:hint="Add a reason for your habit"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/textView5HAE_hd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:text="Selected Date"
                    android:textSize="15dp" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/LL_Schedule_Outer_Container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1">

            </LinearLayout>

            <LinearLayout
                android:id="@+id/LL_Schedule_Inner_Container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?colorHabitBackground"
                android:layout_margin="5dp"
                android:orientation="horizontal"
                android:padding="5dp">

                <TextView
                    android:id="@+id/sunday_text"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:text="SN"
                    android:textColor="?android:colorPrimary"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/monday_text"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="M"
                    android:textColor="?android:colorPrimary"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/tuesday_text"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="T"
                    android:textColor="?android:colorPrimary"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/wednesday_text"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="W"
                    android:textColor="?android:colorPrimary"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/thursday_text"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:text="TH"
                    android:textColor="?android:colorPrimary"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/friday_text"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="F"
                    android:textColor="?android:colorPrimary"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/saturday_text"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:padding="7dp"
                    android:text="SA"
                    android:textColor="?android:colorPrimary"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"></LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- Habit details text
    ID: textViewHAE
    USE: Showing "Habit Details" at the top
    -->

    <!-- Habit details text
    ID: textView2HAE
    USE: Showing "Habit" at the editTextField
