<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    app:cardCornerRadius="16dp"
    android:backgroundTint="@color/AliceBlue"
    android:layout_margin="8dp">

    <LinearLayout
        android:weightSum="120"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"

        >

        <TextView
            android:id="@+id/follower_name_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="90"
            android:text="YourSecretAdmirer"
            android:textSize="20dp" />

        <ImageButton
            android:id="@+id/button_follower_accept"
            android:layout_width="20dp"
            android:layout_height="40dp"
            android:layout_weight="15"
            android:scaleType="fitCenter"
            android:background="@null"
            android:layout_gravity="center_vertical"
            app:srcCompat="@drawable/button_check" />

        <ImageButton
            android:id="@+id/button_follower_deny"
            android:layout_width="20dp"
            android:layout_height="40dp"
            android:layout_weight="15"
            android:scaleType="fitCenter"
            android:background="@null"
            android:layout_gravity="center_vertical"
            app:srcCompat="@drawable/button_x" />


    </LinearLayout>
</androidx.cardview.widget.CardView>